extends layout 

block content 
    .w3-card-4
        header.w3-container.w3-teal
            h1 Aluno #{alunodata.id}
        .w3-container
            ul.w3-ul.w3-card-4
                li
                    b Nome: #{alunodata.nome}
                li 
                    b Número: #{alunodata.id}
                li
                    b Git (link):
                    a(href="/alunos/"+alunodata.repositório)= alunodata.repositório
            fieldset 
                legend TPC's
                each i in [1,2,3,4,5,6,7,8]
                    if alunodata["tpc"+i]
                        input.w3-check(type="checkbox" name="tpc"+i value="1" onclick="return false" checked)
                        label TPC#{i}
                    else
                        input.w3-check(type="checkbox" name="tpc"+i value="0" onclick="return false")
                        label TPC#{i}



        footer.w3-container.w3-teal
            address Gerado por João Castro::EngWeb2022 em #{d} - 
                a(href="/") [Voltar]
