extends layout 

block content 
    .w3-card-4
        header.w3-container.w3-purple
            h2 Student Form
            
        form.w3-container(method="POST" )
            fieldset
                legend Metadata
                label ID
                input.w3-input.w3-round(type="text" name="id")
                label Name
                input.w3-input.w3-round(type="text" name="nome")
                label Git link
                input.w3-input.w3-round(type="text" name="reposit√≥rio")

            fieldset
                legend TPC
                each i in [1,2,3,4,5,6,7,8]
                    input.w3-check(type="checkbox" name="tpc"+i value="0")
                    label TPC#{i}
                        
            button.w3-btn.w3-purple.w3-mb-2(type="submit") Register

        footer.w3-container.w3-purple
            h5 Generated by RPCW2023 in #{d} -[#[a(href="/") Return]]
