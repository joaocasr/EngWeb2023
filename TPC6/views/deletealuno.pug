extends layout 

block content 
    .w3-card-4
        header.w3-container.w3-purple
            h2 Delete Student

        form.w3-container(method="POST" action="/alunos/delete/"+alunodata.id)

            h4 Pretende prosseguir com a eliminação do aluno #{alunodata.nome}(#{alunodata.id}) ?
            button.w3-btn.w3-green.w3-mb-2(type="submit") Sim                    
            button.w3-btn.w3-red.w3-mb-2
                a(href="/") Não
                
        footer.w3-container.w3-purple
            h5 Generated by RPCW2023 in #{d}

